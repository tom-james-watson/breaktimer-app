    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.25.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fbjs-scripts": "^1.0.1",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "husky": "^1.3.1",
