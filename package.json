    "prettier": "^2.4.1",
    "rimraf": "^2.6.3",
    "sass": "^1.41.1",
    "sass-loader": "^10.0.2",
    "sinon": "^7.2.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^5.2.4",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.3",
    "url-loader": "^1.1.2",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.7.2",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.12.1",
    "@blueprintjs/core": "^3.50.1",
