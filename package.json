{
  "name": "breaktimer",
  "version": "2.0.0",
  "productName": "BreakTimer",
  "description": "Manage periodic breaks",
  "scripts": {
    "build": "concurrently \"npm run build-main\" \"npm run build-renderer\"",
    "build-main": "webpack --config webpack.main.config.js",
    "build-renderer": "vite build",
    "dev": "concurrently \"npm run start-renderer-dev\" \"npm run start-main-dev\"",
    "lint": "cross-env NODE_ENV=development eslint --max-warnings=0 --cache --ext .js,.ts,.tsx .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "package": "npm run build && electron-builder build --publish never --config.mac.identity=null --config.mac.target.target=dmg --config.mac.target.arch=arm64",
    "package-all": "npm run build && electron-builder build -mwl",
    "package-ci": "npm run postinstall && npm run build && electron-builder --publish always",
    "package-linux": "npm run build && electron-builder build --linux",
    "package-mac": "npm run build && electron-builder build --mac",
    "package-win": "npm run build && electron-builder build --win --x64",
    "publish-linux": "npm run postinstall && npm run build && electron-builder build --linux --publish always",
    "publish-mac": "npm run postinstall && npm run build && electron-builder build --mac --publish always",
    "publish-win": "npm run postinstall && npm run build && electron-builder build --win --x64 --publish always",
    "postinstall": "electron-builder install-app-deps",
    "start": "cross-env NODE_ENV=production electron ./app/main/dist/main.prod.js",
    "start-main-dev": "cross-env HOT=1 NODE_ENV=development electron app/main/index.dev.js",
    "start-renderer-dev": "vite dev --host"
  },
  "license": "GPL-3.0-or-later",
  "main": "./app/main/dist/main.prod.js",
  "build": {
    "productName": "BreakTimer",
    "copyright": "Copyright Â© 2019 Thomas James Watson",
    "appId": "com.tomjwatson.breaktimer",
    "files": [
      "!node_modules",
      "dist/renderer/",
      "app/renderer/sounds/",
      "app/renderer/preload.js",
      "resources/icon.png",
      "resources/tray/icon.png",
      "resources/tray/tray-iconTemplate.png",
      "resources/tray/tray-iconTemplate@2x.png",
      "resources/tray/tray-iconTemplate@3x.png",
      "app/main/views/production.html",
      "app/main/dist/",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "app/main",
        "to": "resources",
        "filter": [
          "*.png"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "resources/tray",
        "to": "tray"
      }
    ],
    "asar": true,
    "artifactName": "${productName}.${ext}",
    "mac": {
      "entitlements": "./internals/build/entitlements.mac.plist",
      "entitlementsInherit": "./internals/build/entitlements.mac.plist",
      "extendInfo": {
        "LSUIElement": 1
      },
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "notarize": true,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "sign": false
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "category": "Utility"
    },
    "snap": {
      "autoStart": true
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "tom-james-watson",
      "repo": "breaktimer-app",
      "private": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tom-james-watson/breaktimer-app.git"
  },
  "bugs": {
    "url": "https://github.com/tom-james-watson/breaktimer-app/issues"
  },
  "author": "Tom Watson <tom@tomjwatson.com>",
  "homepage": "https://github.com/tom-james-watson/breaktimer-app",
  "devDependencies": {
    "@types/auto-launch": "^5.0.2",
    "@types/howler": "^2.2.4",
    "@types/node": "^18.19.119",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.7.0",
    "chalk": "^4.1.2",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.6",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "electron-debug": "^4.1.0",
    "electron-devtools-installer": "^4.0.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "sinon": "^7.2.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/vite": "^4.1.11",
    "auto-launch": "^5.0.5",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.3.2",
    "clsx": "^2.1.1",
    "electron-store": "^8.2.0",
    "framer-motion": "^12.23.6",
    "howler": "^2.2.4",
    "lucide-react": "^0.525.0",
    "moment": "^2.29.4",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.6",
    "source-map-support": "^0.5.9",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7"
  }
}
